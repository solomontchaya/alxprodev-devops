#!/bin/bash
# Script name: data_extraction_automation-0x01
# Objective: Extract Pokémon’s name, height, weight, and type from data.json using jq, awk, and sed

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found. Please run apiAutomation-0x00 first."
  exit 1
fi

# Extract data from JSON
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
formatted_height=$(jq '.height' data.json | awk '{printf "%.1f", $1/10}')
formatted_weight=$(jq '.weight' data.json | awk '{printf "%.0f", $1/10}')

# Print formatted output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
