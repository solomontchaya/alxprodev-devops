#!/bin/bash
# Script name: data_extraction_automation-0x01
# Objective: Extract and format Pikachu data from data.json using jq, awk, and sed.

# Ensure data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Run the API automation script first."
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')
weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1 / 10}')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Output formatted sentence
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
