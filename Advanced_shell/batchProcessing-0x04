#!/bin/bash
# Script name: batchProcessing-0x04
# Objective: Fetch multiple Pokémon in parallel using background processes and jobs

mkdir -p pokemon_data
pokemons=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
MAX_RETRIES=3

fetch_pokemon() {
    local pokemon=$1
    local attempt=1
    local success=0

    while [ $attempt -le $MAX_RETRIES ]; do
        status=$(curl -s -o "pokemon_data/${pokemon}.json" -w "%{http_code}" "https://pokeapi.co/api/v2/pokemon/$pokemon")
        if [ "$status" -eq 200 ]; then
            echo "Saved data to pokemon_data/${pokemon}.json ✅"
            success=1
            break
        else
            echo "Attempt $attempt failed for $pokemon (status: $status)"
            attempt=$((attempt + 1))
            sleep 2
        fi
    done

    if [ $success -eq 0 ]; then
        echo "Error: Failed to fetch data for $pokemon after $MAX_RETRIES attempts" >> errors.txt
    fi
}

# Start fetches in parallel
for pokemon in "${pokemons[@]}"; do
    echo "Fetching data for $pokemon..."
    fetch_pokemon "$pokemon" &
done

# List all background jobs
echo "Current background jobs:"
jobs

# Wait for all background jobs to finish
wait

echo "All Pokémon data fetched."
